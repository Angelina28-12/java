import java.util.Scanner;

public class Main {
    
	public static void main(String[] ags) {
	    Scanner num = new Scanner(System.in);
	    System.out.println("Выберите валюту:\n 1.Рубль\n 2.Евро\n 3.Доллар\n 4.Гривна\n 5.Иена\n 6.Фунт ");
	    int n = num.nextInt();
	    switch(n){
	        case 1 : 
	            System.out.println("Во всём мире российский рубль, используемый с 13-го века, является второй по возрасту валютой. Древнее его только английский фунт.");
	            break;
	       case 2 : 
	            System.out.println("Евро является самой молодой валютой в мире. Она появилась в первый день нового 2002 года. Теперь ее использует 23 страны и более трехсот миллионов человек. Однако евро не самая распространенная единица платежного инструмента. Франк используется как национальная валюта в 34 стран мира.");
	            break;
	       case 3 : 
	            System.out.println("Доллары США изготавливаются не из бумаги. Они изготовлены изо льна и хлопчатобумажного волокна.");
	            break;
	       case 4 : 
	            System.out.println("Считается, что это название произошло от названия, которое прикрепилось к металлическому украшению. Оно напоминало обруч или медальон на цепи. Очень давно подобное украшение надевали на шею.");
	            break;
	       case 5 : 
	            System.out.println("Слово «иена» имеет корень «эн», что переводится с японского языка как «круглый». Это связано с тем, что монеты в средние века имели различную форму: от прямоугольной до овальной, а именно иены начали чеканить в виде круглых монет.");
	            break;   
	       case 6 : 
	            System.out.println("Фунт стерлингов или просто фунт также известен в различных регионах как квид – это жаргонное название прижилось в Африке и некоторых местах Англии.");
	            break;
	       
	       default:
	            System.out.println("Введите другое число");
	       
	    }
    }
}
